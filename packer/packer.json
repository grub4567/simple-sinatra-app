{
  "_comment": "Packer",
  "_comment": "Source AMI: Ubuntu 18.04 LTS",

  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "temporary_security_group_source_cidrs": ["{{user `ip_cidr`}}"],
      "region": "ap-southeast-2",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "simple-sinatra-app{{timestamp}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "*ubuntu-bionic-18.04-amd64-server-*",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "encrypt_boot": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "../helloworld.rb",
      "destination": "/tmp/helloworld.rb"
    },
    {
      "type": "file",
      "source": "../Gemfile",
      "destination": "/tmp/Gemfile"
    },
    {
      "type": "file",
      "source": "../config.ru",
      "destination": "/tmp/config.ru"
    },
    {
      "type": "file",
      "source": "puma.rb",
      "destination": "/tmp/puma.rb"
    },
    {
      "type": "file",
      "source": "nginx.conf",
      "destination": "/tmp/nginx.conf"
    },
    {
      "type": "file",
      "source": "puma.service",
      "destination": "/tmp/puma.service"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "configure.sh"
    }
  ]
}
